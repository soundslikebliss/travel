<div class="row">
    <div class="span8 offset2">
        <div class="well">
            <%= image_tag @photo.image %>
            <p>
               <%= @photo.description %>
            </p>
            <p>
               <%= @photo.user.name %>
            </p>
            <p>
                <%= @category %>
            </p>

            <% if current_user == @photo.user %>
            <%= link_to 'Edit', edit_photo_path(@photo) %> 
            <% end %>
            <%= link_to 'Back', photos_path %>
        </div>
    </div>
</div>